<section class="flex items-center justify-center flex-grow px-5 py-20 bg-gray-100">
  <div class="w-full overflow-hidden text-gray-500 bg-white shadow-md rounded-lg" style="max-width:800px">
    <div class="w-full md:flex">
      <div class="hidden w-full grow-0 shrink-0 basis-auto lg:w-6/12 lg:block">
        <%= image_tag("devise/sessions/new.jpg", class: "w-full rounded-t-lg lg:rounded-tr-none lg:rounded-bl-lg object-cover", alt: "contact-new") %>
      </div>
      <div class="p-4 bg-white w-100 sm:p-6 lg:p-8 lg:w-6/12">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h5 class="text-3xl font-medium text-gray-900 text-center md:text-left">Connectez-vous à votre plateforme</h5>
          <div>
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-sky-600 focus:outline-none", placeholder:"email@smuca.fr" %>
          </div>
          <div>
            <%= f.label 'Mot de passe', class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-sky-600 focus:outline-none", placeholder: "••••••••" %>
          </div>
          <div class="flex items-start">
            <div class="flex items-start">
              <% if devise_mapping.rememberable? %>
                <div class="flex items-center h-5">
                  <%= f.check_box :remember_me, class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-sky-600 checked:border-sky-600 focus:outline-none transition duration-200 align-top bg-no-repeat bg-center bg-contain float-left cursor-pointer" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label "Se souvenir de moi", class: "font-medium text-gray-900" %>
                </div>
              <% end %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "ml-auto text-sm text-sky-700 hover:underline" %>
            <% end %>
          </div>
          <%= f.button "Accéder à mon dashboard", class: "w-full inline-block px-7 py-3 bg-sky-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-700 hover:shadow-lg focus:bg-sky-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-sky-800 active:shadow-lg transition duration-150 ease-in-out" %>
          <div class="text-sm font-medium text-gray-500 text-center md:text-left">
            Pas encore inscrit ? 
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-sky-700 hover:underline" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
