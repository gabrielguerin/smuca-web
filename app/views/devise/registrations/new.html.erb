<% content_for :page_title, 'SMUCA — Créer un compte' %>
<section class="py-20 bg-gray-100">
  <div class="container max-w-lg mx-auto">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-md w-100 sm:p-6 lg:p-8" style="max-width:800px">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-5">
          <h5 class="text-3xl font-medium text-gray-900">Créer un compte</h5>
        </div>
        <div class="flex -mx-3">
          <div class="w-1/2 px-3 mb-5">
            <%= f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.text_field :first_name, autocomplete: "given-name", type: "text", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Jean" %>
          </div>
          <div class="w-1/2 px-3 mb-5">
            <%= f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.text_field :last_name, autocomplete: "family-name", type: "text", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Dupont" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "email@smuca.fr" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label :job_title, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.text_field :job_title, autocomplete: "organization-title", type: "text", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Médecin généraliste" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label :description, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.text_area :description, type: "text", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "Recusandae minima consequatur. Expedita sequi blanditiis. Ut fuga et." %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label :phone, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.telephone_field :phone, autocomplete: "tel", type: "text", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "+33 6 00 00 00 00" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label 'Mot de passe', class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "••••••••" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 mb-5">
            <%= f.label 'Confirmation du mot de passe', class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", placeholder: "••••••••" %>
          </div>
        </div>
        <div class="flex -mx-3">
          <div class="w-full px-3 my-3">
            <%= f.button "Créer mon compte", class: "w-full inline-block px-7 py-3 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out", style: "background-color: rgba(37, 99, 235, var(--tw-bg-opacity))" %>
          </div>
        </div>
        <div class="text-sm font-medium text-gray-500">
          Vous avez déjà un compte ? 
          <%= link_to "Se connecter", new_user_session_path, class: "text-blue-700 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
