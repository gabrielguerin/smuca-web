<section class="bg-gray-100 py-20">
  <div class="container max-w-lg mx-auto">
    <div class="p-4 w-100 bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 lg:p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h5 class="text-3xl font-medium text-gray-900">Modifier mon compte</h5>
        <div>
          <%= f.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :first_name, autocomplete: "given-name", type: "text", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Jean" %>
        </div>
        <div>
          <%= f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :last_name, autocomplete: "family-name", type: "text", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Dupont" %>
        </div>
        <div>
          <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "email@smuca.fr" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div>
          <%= f.label :job_title, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_field :job_title, autocomplete: "organization-title", type: "text", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Médecin généraliste" %>
        </div>
        <div>
          <%= f.label :description, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.text_area :description, type: "text", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Recusandae minima consequatur. Expedita sequi blanditiis. Ut fuga et." %>
        </div>
        <div>
          <%= f.label :phone, class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.telephone_field :phone, autocomplete: "tel", type: "text", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "+33 6 00 00 00 00" %>
        </div>
        <div>
          <%= f.label 'Mot de passe', class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "••••••••" %>
          <p class="mt-2 mb-4 text-sm text-gray-500 dark:text-gray-400">Laissez ce champ vide si vous ne voulez pas le changer</p>
        </div>
        <div>
          <%= f.label 'Confirmation du mot de passe', class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Confirmation du mot de passe" %>
        </div>
        <div>
          <%= f.label 'Mot de passe actuel', class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", placeholder: "Confirmation du mot de passe" %>
          <p class="mt-2 mb-4 text-sm text-gray-500 dark:text-gray-400">Nous avons besoin de votre mot de passe actuel pour confirmer vos changements</p>
        </div>
        <%= f.button "Modifier mon compte", class: "w-full text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded" %>
        <div class="text-sm font-medium text-gray-500">
          <%= link_to "Supprimer mon compte", new_user_session_path, class: "text-red-700 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
