<section class="bg-white max-w-lg mx-auto px-8 md:p-12 my-20 rounded-lg shadow-2xl">
  <div class="mt-3">
    <h4 class="w-full text-3xl font-bold">Modifier mon compte</h4>
    <div class="relative w-full mt-10 space-y-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <%= f.text_field :job_title, autofocus: true, autocomplete: "organization-title", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <%= f.text_area :description, autofocus: true, autocomplete: "family-name", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <%= f.text_field :phone, autofocus: true, autocomplete: "tel", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-4 py-3 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none", placeholder: "Nouveau mot de passe" %>
          <p class="mt-2 mb-4 text-sm text-gray-500 dark:text-gray-400">Laissez ce champ vide si vous ne voulez pas le changer</p>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none", placeholder: "Confirmation du mot de passe" %>
        <div class="field">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full px-4 py-3 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none", placeholder: "Mot de passe actuel" %>
          <p class="mt-2 mb-4 text-sm text-gray-500 dark:text-gray-400">Nous avons besoin de votre mot de passe actuel pour confirmer vos changements</p>
        </div>
        <div class="actions">
          <%= f.submit "Mettre Ã  jour", class: "w-full px-3 py-4 font-medium text-white bg-blue-600 rounded-lg hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
        </div>
      <% end %>
      <p class="w-full mt-4 text-sm text-center text-gray-500">Supprimer 
        <%= link_to "mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-blue-500 underline" %>
      </p>
    </div>
  </div>
</section>
