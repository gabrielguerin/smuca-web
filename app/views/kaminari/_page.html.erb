<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <li class="page-item active">
    <span class="page-link relative block py-1.5 px-3 rounded border-0 bg-sky-600 outline-none transition-all duration-300 text-white hover:text-white hover:bg-sky-600 shadow-md focus:shadow-md">
      <%= page %>
    </span>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "page-link relative block py-1.5 px-3 rounded border-0 bg-transparent outline-none transition-all duration-300 text-gray-800 hover:text-gray-800 hover:bg-gray-200 focus:shadow-none"} %>
  </span>
</li>
<% end %>
