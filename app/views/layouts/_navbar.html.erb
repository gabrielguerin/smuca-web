<nav class="px-2 py-4 bg-white border-gray-200 shadow-md sm:px-4">
  <div class="container flex flex-wrap items-center justify-between mx-auto">
    <%= link_to(root_path, class: "flex items-center rounded-md", alt: "SMUCA Logo") do %>
      <%= image_tag("logo/logo-blue.png", class: "mr-3 h-6 sm:h-9") %>
      <span class="self-center text-xl font-semibold uppercase whitespace-nowrap hover:text-gray-700">Smuca</span>
    <% end %>
    <div class="flex items-center md:order-2">
      <% if current_user %>
        <button type="button" class="flex mr-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
          <span class="sr-only">Open user menu</span>
          <%= image_tag(current_user.avatar, class: "w-8 h-8 rounded-full", alt: "user photo") %>
        </button>
        <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow" id="dropdown" style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(1036.5px, 881.5px, 0px);" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="top">
          <div class="px-4 py-3">
            <span class="block text-sm text-gray-900"><%= current_user.first_name %> <%= current_user.last_name %></span>
            <span class="block text-sm font-medium text-gray-500 truncate"><%= current_user.email %></span>
          </div>
          <ul class="py-1" aria-labelledby="dropdown">
            <li>
              <%= link_to "Dashboard", admin_contacts_path, class: "block px-6 py-2.5 text-sm text-gray-700 hover:bg-gray-100" %>
            </li>
            <li>
              <%= link_to "Modifier le compte", edit_user_registration_path(current_user), class: "block px-6 py-2.5 text-sm text-gray-700 hover:bg-gray-100" %>
            </li>
            <li>
              <%= button_to "Se déconnecter",  destroy_user_session_path, method: 'delete', class: "block w-full text-left px-6 py-2.5 text-sm text-red-700 hover:bg-gray-100" %>
            </li>
          </ul>
        </div>
        <button data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="mobile-menu-2" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
          <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
      <% else %>
        <%= link_to "Se connecter", new_user_session_path, class: "inline-block px-6 py-2.5 bg-blue-600 text-white font-medium leading-snug rounded hover:bg-blue-700 focus:bg-blue-700 focus:outline-none focus:ring-0 active:bg-blue-800 transition duration-150 ease-in-out" %>
      <% end %>
    </div>
    <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="mobile-menu-2">
      <ul class="flex flex-col mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium">
        <li>
          <%= link_to "Accueil", root_path, class: class_names('inline-block px-6 py-2.5 text-gray-700 font-medium text-base leading-snug rounded hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-0 active:bg-gray-200 transition duration-150 ease-in-out', { "bg-gray-100": current_page?(root_path) }) %>
        </li>
        <li>
          <%= link_to "Notre équipe", users_path, class: class_names('inline-block px-6 py-2.5 text-gray-700 font-medium text-base leading-snug rounded hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-0 active:bg-gray-200 transition duration-150 ease-in-out', { "bg-gray-100": current_page?(users_path) }) %>
        </li>
        <li>
          <%= link_to "Nous contacter", new_contact_path, class: class_names('inline-block px-6 py-2.5 text-gray-700 font-medium text-base leading-snug rounded hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-0 active:bg-gray-200 transition duration-150 ease-in-out', { "bg-gray-100": current_page?(new_contact_path) }) %>
        </li>
      </ul>
    </div>
  </div>
</nav>
