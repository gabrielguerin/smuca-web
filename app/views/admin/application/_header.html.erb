<% content_for(:title) do %>
  <%= display_resource_name(page.resource_name) %>
<% end %>
<nav class="absolute top-0 left-0 z-10 flex items-center w-full pt-10 bg-transparent md:flex-row md:flex-nowrap md:justify-start">
  <div class="flex flex-wrap items-center justify-between w-full px-4 mx-autp md:flex-nowrap md:px-10">
    <%= link_to 'Dashboard', admin_contacts_path, class: "self-center text-xl font-semibold uppercase whitespace-nowrap text-white hover:text-gray-100" %>
    <% if show_search_bar %>
      <%= render("search", search_term: search_term, resource_name: display_resource_name(page.resource_name)) %>
    <% end %>
    <button type="button" class="flex mr-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
      <span class="sr-only">Open user menu</span>
      <%= image_tag(current_user.avatar, class: "w-8 h-8 rounded-full", alt: "user photo") %>
    </button>
    <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow" id="dropdown" style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(1036.5px, 881.5px, 0px);" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="top">
      <div class="px-4 py-3">
        <span class="block text-sm text-gray-900"><%= current_user.first_name %> <%= current_user.last_name %></span>
        <span class="block text-sm font-medium text-gray-500 truncate"><%= current_user.email %></span>
      </div>
      <ul class="py-1" aria-labelledby="dropdown">
        <li>
          <%= link_to "Accueil", root_path, class: "block px-6 py-2.5 text-sm text-gray-700 hover:bg-gray-100" %>
        </li>
        <li>
          <%= link_to "Modifier mon compte", edit_user_registration_path(current_user), class: "block px-6 py-2.5 text-sm text-gray-700 hover:bg-gray-100" %>
        </li>
        <li>
          <%= button_to "Se dÃ©connecter", destroy_user_session_path, method: 'delete', class: "block w-full text-left px-6 py-2.5 text-sm text-red-700 hover:text-red-700 hover:bg-gray-100" %>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="relative pt-12 pb-32 bg-blue-600 md:pt-32">
  <div class="w-full px-4 mx-auto md:px-10">
    <div>
      <!-- Card stats -->
      <div class="flex flex-wrap">
        <% Administrate::Namespace.new(namespace).resources_with_index_route.each do |resource| %>
          <%= render "card_stats", resource: resource -%>
        <% end %>
      </div>
    </div>
  </div>
</div>
